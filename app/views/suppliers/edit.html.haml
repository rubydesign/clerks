.row
  .col-2
  .col-8
    %h2.suppliers_edit_start
      = t params["action"]
      = t(:supplier)
    = simple_form_for(@supplier) do |f|
      = f.input :supplier_name
      = render "addresses/form_fields" ,:f => f
      .form-actions
        = f.submit :class => "btn btn-success"
        = link_to t(:back), suppliers_path, :class => "btn btn-warning"
.suppliers_edit_end
