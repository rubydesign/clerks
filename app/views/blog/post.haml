- content_for(:title , @post.title)
.row.blog_nav
  .prev_post=raw(prev_post(@post))
  .next_post=raw(next_post(@post))

.blog_post.row
  .center_col
    %h1
      = @post.title
      %span
        (
        =@post.date
        )
  .center_col
    = render( "posts/#{@post.template_name}" )

.row
  %ul.nav
    - Post.posts.each do |slug, post|
      %li
        =link_to blog_post_path(slug) do
          =post.title.capitalize
          %small= post.date
